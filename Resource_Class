from enum import Enum
class Type(Enum):
    Metal = 1
    Crystal = 2
    Deuter = 3

class Resource:

    def __init__(self, type):
        self.type = type
        self.quantity = int(0)

    def get_type(self):
        return self.type

    def get_quantity(self):
        return self.quantity

    def set_type(self,value):
        if type(value) is int:
            self.type = value
        else:
            print("wrong data type in 'value' argument on set_type function (Resource class)")

    def set_quantity(self,value):
        if type(value) is int:
            self.quantity = value
        else:
            print("wrong data type in 'value' argument on set_quantity function (Resource class)")

    def add(self,value):
        if type(value) is int:
            self.quantity = self.quantity + value
        else:
            print("wrong data type in 'value' argument on add function (Resource class)")

    def substract(self,value):
        if type(value) is int:
            self.quantity = self.quantity - value
        else:
            print("wrong data type in 'value' argument on substract function (Resource class) ")



metal = Resource(Type.Metal)
metal.set_quantity(8)
name = metal.get_quantity()
print (name)
metal.add(50)
name = metal.get_quantity()
print(name)
metal.substract(50)
name = metal.get_quantity()
print (name)
